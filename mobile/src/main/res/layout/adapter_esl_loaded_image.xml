<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    app:strokeColor="@color/silabs_red"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/esl_image_loaded"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@color/silabs_click_grey" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_image_no_specifiers"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            tools:text="Image 1"
            android:layout_height="wrap_content">

        </TextView>


        <ProgressBar
            android:id="@+id/esl_image_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/esl_image_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/esl_loaded_image_not_found"
            android:visibility="gone"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>