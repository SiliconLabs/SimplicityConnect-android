<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hex_text_readonly"
            android:layout_width="@dimen/encoded_label_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/hex"
            android:textColor="@color/silabs_subtle_text"
            android:textSize="@dimen/encoded_label_text_size" />

        <EditText
            android:id="@+id/hex_readonly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:textSize="@dimen/encoded_value_text_size" />

        <ImageView
            android:id="@+id/hex_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_ripple_effect"
            android:padding="8dp"
            android:src="@drawable/ic_copy"
            app:tint="@color/silabs_blue" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ascii_text_readonly"
            android:layout_width="@dimen/encoded_label_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/ascii"
            android:textColor="@color/silabs_subtle_text"
            android:textSize="@dimen/encoded_label_text_size" />

        <EditText
            android:id="@+id/ascii_readonly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:textSize="@dimen/encoded_value_text_size" />

        <ImageView
            android:id="@+id/ascii_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_ripple_effect"
            android:padding="8dp"
            android:src="@drawable/ic_copy"
            app:tint="@color/silabs_blue" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/decimal_text_readonly"
            android:layout_width="@dimen/encoded_label_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/decimal"
            android:textColor="@color/silabs_subtle_text"
            android:textSize="@dimen/encoded_label_text_size" />

        <EditText
            android:id="@+id/decimal_readonly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:textSize="@dimen/encoded_value_text_size" />

        <ImageView
            android:id="@+id/decimal_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_ripple_effect"
            android:padding="8dp"
            android:src="@drawable/ic_copy"
            app:tint="@color/silabs_blue" />
    </LinearLayout>

</LinearLayout>