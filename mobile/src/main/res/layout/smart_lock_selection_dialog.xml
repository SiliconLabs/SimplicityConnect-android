<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/matter_18dp"
    android:layout_gravity="center"
    style="@style/dialog_card">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/matter_18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="@dimen/text_size_ML"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:text="@string/smart_lock_demo_selection_dialog_title"/>

        <TextView
            android:text="@string/smart_lock_demo_dialog_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_SM"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bleBtn"
                style="@style/MatterButtonBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/matter_18dp"
                android:textIsSelectable="false"
                android:text="@string/smart_lock_demo_dialog_btn_ble" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/awsBtn"
                style="@style/MatterButtonBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/matter_18dp"
                android:textIsSelectable="false"
                android:text="@string/smart_lock_demo_dialog_btn_aws" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>