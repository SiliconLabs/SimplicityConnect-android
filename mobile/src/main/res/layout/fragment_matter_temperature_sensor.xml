<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_5dp"
                android:gravity="center"
                android:text="@string/matter_temp_sensor_cluster"
                android:textSize="@dimen/text_size_XL"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/matter_15dp"
                android:layout_margin="@dimen/matter_25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_value"
                    android:text="@string/matter_init_value"
                    android:textSize="@dimen/text_size_XXL"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/matter_200dp"
                    android:layout_height="@dimen/matter_200dp"
                    android:layout_margin="@dimen/matter_10dp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/temp_note_message"
                    android:textSize="@dimen/text_size_ML"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_read_value"
                    style="@style/MatterButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_10dp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
