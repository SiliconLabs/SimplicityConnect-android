<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_cluster_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_5dp"
                android:gravity="center"
                android:text="@string/matter_plug_title"
                android:textSize="@dimen/text_size_XL"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_matter_device_state"
                android:layout_width="@dimen/matter_light_height"
                android:layout_height="@dimen/matter_light_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/matter_18dp"
                android:layout_marginBottom="@dimen/matter_18dp"
                android:background="@color/silabs_transparent"
                android:scaleType="centerInside" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_on"
                    style="@style/MatterButtonBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_20dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_off"
                    style="@style/MatterButtonBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_20dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
