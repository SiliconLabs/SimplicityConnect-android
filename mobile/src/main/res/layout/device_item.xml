<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/listChoiceBackgroundIndicator"
    android:orientation="horizontal">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/device_selection_item_padding"
        android:layout_marginBottom="@dimen/device_selection_item_padding"
        android:adjustViewBounds="false"
        android:src="@drawable/bt_level" />

    <TextView
        android:id="@android:id/title"
        style="@style/Subhead"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/device_selection_item_margin"
        android:layout_weight="1"
        android:drawableBottom="@drawable/item_divider"
        android:drawablePadding="@dimen/device_selection_item_padding"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingTop="@dimen/device_selection_item_padding"
        android:textSize="@dimen/device_item_text_size"
        tools:text="Bluetooth Device" />

</LinearLayout>