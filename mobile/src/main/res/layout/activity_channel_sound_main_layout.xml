<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.demo.channel_sounding.activities.ChannelSoundingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Fake Status Bar View -->
        <View
            android:id="@+id/fakeStatusBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blue_primary"
            app:layout_constraintBottom_toTopOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/channel_sounding_screen_name"
            app:titleTextColor="#ffff" />

        <!-- Right most ImageView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/matter_40dp"
            android:orientation="horizontal"
            android:padding="@dimen/matter_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/channelSoundingConfig"
                android:layout_width="0dp"
                android:layout_height="@dimen/matter_36dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/matter_10dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_settings" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/configure_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/cs_top_margin"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:text="Channel Sounding Demo" />

    <LinearLayout
        android:id="@+id/channelSoundingActivityContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/cs_top_margin"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/configure_title"
            style="@style/settings_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/channel_sounding_initiator_title"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calculations"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/confidence_score"
                style="@style/settings_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel_sounding_confidence_score"
                android:textSize="20sp"
                android:gravity="start"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/channel_sounding_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <com.siliconlabs.bledemo.features.demo.channel_sounding.views.DynamicRippleView
                android:id="@+id/ripple_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rippleColor="@color/silabs_blue"
                android:layout_centerInParent="true"
                android:gravity="center"
                app:rippleDuration="3000"
                app:rippleRadius="50dp"
                app:rippleAmount="6"
                app:rippleScale="6">

                <TextView
                    android:id="@+id/distanceResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/channel_sounding_default_text_00_00_m"
                    android:textSize="@dimen/channel_sounding_distance_text_size"
                    android:textColor="@color/silabs_white"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </com.siliconlabs.bledemo.features.demo.channel_sounding.views.DynamicRippleView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>